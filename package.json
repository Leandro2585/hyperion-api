{
  "name": "hyperion-api",
  "version": "0.0.1",
  "main": "index.js",
  "repository": "https://github.com/Leandro2585/hyperion-api",
  "author": "Leandro2585 <leo.real2585@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "sucrase-node src/main/server.ts",
    "build": "rimraf build && tsc -p tsconfig-build.json",
    "dev": "ts-node-dev --respawn --transpile-only -r dotenv/config src/main/server.ts",
    "lint": "eslint .",
    "lint:fix": "yarn lint -- --fix",
    "prepare": "husky install",
    "test": "jest --passWithNoTests --no-cache --runInBand",
    "test:watch": "yarn test --watch",
    "test:staged": "yarn test --findRelatedTests",
    "test:coverage": "yarn test --coverage",
    "test:integration": "yarn test -- -c ./jest-integration-config.js",
    "test:fb-api": "yarn test:integration -- tests/external/facebook-api.test.ts",
    "typeorm": "ts-node-dev -r tsconfig-paths/register ./node_modules/typeorm/cli.js"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "typeorm": "0.2.29"
  },
  "devDependencies": {
    "@jest-mock/express": "^1.4.4",
    "@types/axios": "^0.14.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^16.6.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "eslint": "^7.32.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "jest-mock-extended": "^2.0.2-beta2",
    "lint-staged": "^11.1.2",
    "pg-mem": "^1.9.17",
    "sucrase": "^3.20.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.4",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.3.5"
  },
  "engines": {
    "node": "16.x"
  }
}
